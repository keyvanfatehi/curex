#!/usr/bin/env node
var Curex = require('../lib/curex');

var argv = require('yargs').
  usage("Monitor http services\nUsage: curex -c path/to/config.js").
  demand("c").
  alias("c", "config").
  describe("c", "javascript config file path").
  check(Curex.loadConfig).argv;

Curex.watchConfig();
Curex.start();
